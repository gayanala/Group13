@import url('https://fonts.googleapis.com/css?family=Open+Sans:300,400,700')
grey = #ddd

set-position(t = auto, r = auto, b = auto, l = auto)
	position absolute
	if t != auto
		top t
	if r != auto
		right r
	if b != auto
		bottom b
	if l != auto
		left l

fix-position(t = auto, r = auto, b = auto, l = auto)
	position fixed
	if t != auto
		top t
	if r != auto
		right r
	if b != auto
		bottom b
	if l != auto
		left l

set-dimension(h = auto, w = auto)
	if h != auto
		height h
	if w != auto
		width w

center(t = auto, r = auto, b = auto, l = auto)
	set-position(t, r, b, l)
	if l != auto
		margin-right -50%
		transform translate(-50%, -50%)
	else if r != auto
		transform translate(50%, -50%)

html, body
	margin 0
	padding 0
	overflow-x hidden

.menu-icon
	set-position(32px, 32px)

.splash-banner
	set-dimension(500px, 100vw)
	position relative
	background grey
	background url('../res/meeting.jpg') no-repeat center center
	background-size cover

.splash-filter
	set-position(0, , , 0)
	set-dimension(100%, 100%)
	background rgba(0, 0, 0, 0.2)

.splash-title
	center(50%, , , 50%)
	font-size 72px
	font-family 'Open Sans', sans
	color white
	font-weight 700

.account-content
	display flex

.left-column
	flex-grow 1
	background white
	padding 48px
	display flex
	align-items center
	flex-direction column

.search-bar
	set-dimension(64px, 70%)
	border-radius 32px
	background white
	border 3px solid grey
	padding 12px
	box-sizing border-box
	position relative
	margin-bottom 16px
	display flex
	justify-content flex-end

	&:hover
		cursor text

.search-form
	set-dimension(, 90%)

.search-query
	set-dimension(100%, 100%)
	border none
	outline none
	text-align right
	font-size 24px

	&::-webkit-input-placeholder
		color grey

.search-icon
	set-dimension(, 64px)

.active-agents-list
	padding 48px
	set-dimension(, 90%)
	display flex
	align-items center
	flex-direction column

.active-agents-title
	font-size 48px
	font-family 'Open Sans', sans

.agent
	set-dimension(200px, 90%)
	border 2px solid grey
	background white
	margin 16px 0
	display flex

.agent-photo
	set-dimension(100%, )

	&:hover
		cursor pointer

.agent-information
	padding 16px 32px
	flex-grow 1
	font-family 'Open Sans', sans

.agent-row
	set-dimension(44px, 100%)
	display flex
	align-items center

	&:hover
		cursor pointer

.agent-row .image
	margin 0 16px

.agent-name
	font-size 32px
	font-weight 700
	margin-right 16px

.agent-availability, .agent-unavailability
	padding 4px 24px
	color white
	border-radius 32px

	&:hover
		cursor pointer

.agent-availability
	background green

.agent-unavailability
	background red

.right-column
	flex-grow 2
	padding 48px 24px
	box-sizing border-box

.video-feed
	border 2px solid grey
	padding 24px 0
	display flex
	align-items center
	flex-direction column

.video
	set-dimension(250px, 56%)
	background grey
	margin 24px 0
	position relative
	overflow-x hidden
	overflow-y hidden

	&:hover
		cursor pointer

.divider
	set-dimension(2px, 80%)
	background grey
	margin 24px 0

.video-text
	center(50%, , , 50%)
	font-family 'Open Sans'
	font-size 40px
	text-align center
	font-weight bold	
	max-width 50%

.corporate-account-video-text-dead
	color white

.corporate-account-video-text-live
	color red

.corporate-account-video-player-posistion
	margin-left 0px

.corporate-account-video-player-play-button
	center(50%, , , 50%)
	height 100px
	width 100px
	z-index 10

.corporate-account-video-player-play-button:hover
	height 110px
	width 110px
